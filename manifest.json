{
  "manifest_version": 2,
  "author": "www.leonixyz.net",
  "name": "Monkey Passwords",
  "version": "1.0.0",
  "description": "A simple, cross-device, password manager. Works in parallel on your laptop, desktop and phone.",
  "applications": {
     "gecko": {
          "id": "yet_another_password_manager@mozilla.org"
     }
  },
  "icons": {
    "48": "monkey-face-dark.svg"
  },
  "permissions": [
    "clipboardWrite",
    "storage",
    "activeTab"
  ],
  "browser_action": {
    "default_title": "Monkey Password Box (Alt + P)",
    "default_popup": "ui.html",
    "browser_style": true,
    "theme_icons": [{
      "dark": "monkey-face-dark.svg",
      "light": "monkey-face-light.svg",
      "size": 32
    }]
  },
  "options_ui": {
    "page": "settings.html"
  },
  "commands":{
    "_execute_browser_action": {
      "suggested_key": {
          "default": "Alt+P"
      }
    }
  }
}